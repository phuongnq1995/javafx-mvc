<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane prefHeight="600" prefWidth="1024" xmlns="http://javafx.com/javafx/17.0.2-ea"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.phuongnq.javafxmvc.AppController">
    <VBox>
        <HBox prefHeight="30.0" prefWidth="1003.0" BorderPane.alignment="TOP_CENTER">
            <children>
                <VBox>
                    <Label prefWidth="101.0" text="MVC Application"/>
                </VBox>
                <VBox alignment="CENTER_RIGHT" prefWidth="901.0">
                    <HBox alignment="CENTER_RIGHT">
                        <Label fx:id="usernameLabel">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Label>
                        <Button fx:id="logoutBtn" mnemonicParsing="false" text="Logout"/>
                    </HBox>
                </VBox>
            </children>
        </HBox>
        <HBox fx:id="applicationContainer" alignment="CENTER" prefHeight="530.0" prefWidth="100.0">

        </HBox>
        <VBox alignment="BOTTOM_CENTER" prefHeight="30">
            <HBox alignment="CENTER_RIGHT">
                <Label fx:id="serverStatusLabel" alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="87.0" text="">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0"/>
                    </HBox.margin>
                </Label>
            </HBox>
        </VBox>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0"/>
        </padding>
    </VBox>
    <StackPane fx:id="loadingContainer" style="-fx-background-color: rgba(0, 100, 100, 0.5); -fx-background-radius: 0;"
               visible="false">
        <ProgressBar prefWidth="231.0" progress="0.0" BorderPane.alignment="CENTER"/>
        <Label alignment="CENTER" style="-fx-text-fill: goldenrod; -fx-padding: 0 0 30 0; -fx-text-alignment: center"
               text="Please wait..."/>
    </StackPane>
</StackPane>
